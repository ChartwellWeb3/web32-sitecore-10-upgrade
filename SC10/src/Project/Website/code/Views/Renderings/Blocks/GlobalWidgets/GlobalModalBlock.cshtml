@using Sitecore.Mvc.Presentation
@model RenderingModel
@{
  var item = Sitecore.Context.Database.GetItem("/sitecore/content/Chartwell/Project/GlobalWidgets/GlobalModal");
}
@{
  string ModalContent = string.Empty;
  if (item.Fields["isGlobalModalActive"].Value == "1") // 0 == false
  {
    <div class="modal @item.Fields["ModalClassName"].Value.ToString()" id="SiteWideModal" tabindex="-1" role="dialog" aria-labelledby="GlobalModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="GlobalModalLabel">@item.Fields["ModalTitle"].Value.ToString()</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            @Html.Raw(item.Fields["ModalContent"].Value.ToString())
          </div>
        </div>
      </div>
    </div>
    <script>
      $().ready(function () {
        $('#SiteWideModal').modal('show');
      });
    </script>
  }





}




